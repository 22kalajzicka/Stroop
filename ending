<script>
window.addEventListener("message", function(event){
    const data = event.data;
    if(data.stroop_accuracy && data.stroop_avgRT){
        document.getElementById("summary").innerHTML =
          `Thank you for completing the Stroop Task!<br>
          Accuracy: ${data.stroop_accuracy}%<br>
          Average RT: ${data.stroop_avgRT} ms<br><br>
          Click Next to continue.`;
    }
});
</script>
